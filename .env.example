# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# n8n Configuration
# =============================================================================

# n8n Base URL (change to your domain when DNS is active)
N8N_BASE_URL=http://163.176.225.87/n8n

# n8n API Credentials (if using API)
# N8N_API_KEY=your_n8n_api_key_here

# =============================================================================
# Google Services
# =============================================================================

# Google Sheets API (configured via OAuth in n8n UI)
# GOOGLE_SHEETS_CLIENT_ID=your_client_id_here
# GOOGLE_SHEETS_CLIENT_SECRET=your_client_secret_here

# Google Sheet ID for uptime monitoring
# GOOGLE_SHEET_ID=your_sheet_id_here

# =============================================================================
# AI Services
# =============================================================================

# Groq API (for AI chat)
# GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API (alternative to Groq)
# GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Notification Services
# =============================================================================

# Email (SMTP) - Gmail example
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_specific_password

# Telegram Bot
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# Domain & Website
# =============================================================================

# Primary domain
DOMAIN=gabrielnetto.com

# Oracle Cloud IP
ORACLE_IP=163.176.225.87

# Backup Oracle IP (if needed)
# ORACLE_BACKUP_IP=163.176.171.139

# =============================================================================
# Deployment
# =============================================================================

# Deployment user (for SSH/remote deployment if needed)
# DEPLOY_USER=ubuntu
# DEPLOY_HOST=163.176.225.87

# =============================================================================
# Notes
# =============================================================================
# - Most credentials should be configured in n8n's UI for security
# - This file is primarily for scripts in execution/ directory
# - Use .env only for non-sensitive configuration when possible
# - For sensitive data, prefer n8n's credential management system
